
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to the gyms collection
    // for the purposes of this demo. In a real application,
    // you would want to secure this with authentication rules.
    match /gyms/{gymId} {
      allow read, update: if true;
      allow create, delete: if false; // For safety, disallow create/delete
    }
  }
}
